<div class="container">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <h1 class="text-center">Log in</h1><br>
            <form action="/api/uporabniki-login" method="post" role="form" id="loginForm" class="card bg-light"
                style="padding: 20px;">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input name="geslo" type="password" class="form-control" id="exampleInputPassword1"
                        placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                </br>
                <a href="/signup"><button type="button" class="btn btn-primary btn-block">Sign up</button></a>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
</div>

